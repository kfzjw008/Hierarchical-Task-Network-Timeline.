<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="study2.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="study2.perspective"
            defaultShowIn="study2.views.DataBaseView"
            fixed="false"
            id="study2.perspective"
            name="主窗口">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="database"
            name="Data Category">
      </category>
      <view
            category="database"
            class="study2.views.DataBaseView"
            icon="icons/sample.png"
            id="study2.views.DataBaseView"
            name="数据库2">
      </view>
      <view
            class="study2.views.LogView"
            id="study2.views.LogView"
            name="日志系统"
            restorable="true">
      </view>
      <view
            class="study2.views.editorView"
            id="study2.views.editorView"
            name="插件操作台"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="study2.perspective">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="study2.application"
            description="111"
            name="Main_Application">
         <property
               name="windowImages"
               value="resources/image/main_c.png,resources/image/main_c.png">
         </property>
         <property
               name="appName"
               value="Main_Application">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFFFF">
         </property>
         <property
               name="startupMessageRect"
               value="18,340,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="18,360,600,15">
         </property>
         <property
               name="aboutText"
               value="航天器电子数据单管理系统">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="resources/image/main_c.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="study2.views.MessageConsoleView"
            label="日志系统">
      </consoleFactory>
   </extension>

   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="study2.actions.AboutViewAction"
            targetID="study2.views.AboutView">
         <action
               class="study2.actions.AboutViewAction"
               icon="resources/image/16.ico"
               id="study2.action1"
               label="初始化信息"
               menubarPath="additional"
               style="push"
               toolbarPath="additional">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="study2.preferences.SamplePreferencePage"
            id="study2.preferences.SamplePreferencePage"
            name="全局设置">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="study2.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="study2.views.editorcontent"
            default="false"
            id="study2.views.editorcontent"
            name="内容编辑器">
      </editor>
   </extension>

</plugin>
